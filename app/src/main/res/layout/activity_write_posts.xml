<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Options.WritePostsActivity">

    <include
        android:id="@+id/t"
        layout="@layout/tool_bar_custom"/>

    <ImageView
        android:layout_below="@id/t"
        android:id="@+id/photo_public"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/caption"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="5dp" />

    <EditText
        android:inputType="textMultiLine"
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/add_pic"
        android:layout_toLeftOf="@id/add_pic"
        android:background="@drawable/edt_bck"
        android:hint="Write caption.."
        android:padding="5dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_pic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/send_post"
        android:layout_toLeftOf="@id/send_post"
        android:src="@drawable/ic_baseline_add_24" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/send_post"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_baseline_send_desable" />

</RelativeLayout>