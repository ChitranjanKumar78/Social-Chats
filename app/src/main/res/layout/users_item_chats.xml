<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/on_off"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/offline" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="3dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/profile_img"
        android:layout_toRightOf="@id/profile_img"
        android:singleLine="true"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/seen_or_not"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/user_name"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/profile_img"
        android:layout_toRightOf="@id/profile_img"
        android:src="@drawable/not_seen" />

    <TextView
        android:id="@+id/last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_toStartOf="@id/last_msg_time"
        android:layout_toLeftOf="@id/last_msg_time"
        android:layout_toEndOf="@id/seen_or_not"
        android:layout_toRightOf="@id/seen_or_not"
        android:padding="3dp"
        android:singleLine="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/last_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="3dp"
        android:singleLine="true"
        android:textSize="12sp" />
</RelativeLayout>